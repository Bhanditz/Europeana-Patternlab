{{> atoms-svgicons-search }}

{{> organisms-header}}

<div role="main" class="page l-page">

<section class="search-hero">
		<div class="searchbar">
			--previous terms--
			--input field--
			--search button--
		</div>
</section>

<section class="search-results">
<div class="container">


	<div class="results-list">

		<div class="results-header">

			<div class="action-select">
				<input type="checkbox" name="allselected" id="action_select_all">
			</div>

			<div class="result-actions">
			{{> molecules-dropdown }}
			</div>

			<div class="result-info">
				1640 results for <strong>Rembrandt</strong> and <strong>Art History</strong>
			</div>



			<div class="result-controls">

				<div class="result-sort">
				<a class="dropdown-trigger" href="#" data-dropdown="#dropdown-result-sort">Relevance</a>

				<div id="dropdown-result-sort" class="dropdown">
					<div class="menu-title">Sort by…</div>

				    <ul class="dropdown-menu">
				        <li><a href="#1">Date</a></li>
				        <li><a href="#2">Alphabetical</a></li>
				        <li><a href="#3">Relevance</a></li>
				        <li><a href="#3">Relevance</a></li>
				        <li class="dropdown-divider"></li>
				        <li><a href="#5" class="menu-more">Advanced search</a></li>
				    </ul>
				</div>
				</div>

				{{! List and grid view buttons }}
				{{> molecules-buttonbar-viewtype }}


			</div>
			

		</div>


		<ol>
		{{# listItems.ten }}
			<li>
		    {{> molecules-search-listitem(type-image:true) }}
		    </li>
		{{/ listItems.ten }}
			

		</ol>
	</div>


	<div class="refine">

		<h2>Refine your search</h2>

		{{> molecules-filter-simple(title: "Theme") }}

		{{> molecules-filter-simple(title: "Type") }}

		{{> molecules-filter-date(title: "Date") }}

		{{> molecules-filter-simple(title: "Country") }}

		{{> molecules-filter-license(title: "License") }}

		--language search options--
		
		<a href="">More refinements…</a>

	</div>

</div>
</section>

</div>


{{> organisms-footer }}

