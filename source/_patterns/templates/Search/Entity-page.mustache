{{> atoms/iconography/svgicons-search }}

{{> organisms/global/header_v2}}

<section class="after-header-with-search">

  <div class="lc relative">

    <div class="anagraphical desktop">
      {{#entity_title}}<h1 class="entity-title">{{.}}</h1>{{/entity_title}}

      {{#entity_anagraphical}}
        <div class="anagraphical-datum">
          {{#label}}
            <h3>
              {{.}}
            </h3>
          {{/label}}
          {{value}}
        </div>
      {{/entity_anagraphical}}

    </div>

    <div class="summary-column">
      <div class="cf">
        {{#entity_title}}<h1 class="entity-title narrow">{{.}}</h1>{{/entity_title}}
        <div class="anagraphical narrow">
          {{#entity_anagraphical}}
            <div class="anagraphical-datum">
              {{#label}}
                <h3>
                  {{.}}
                </h3>
              {{/label}}
              {{value}}
            </div>
          {{/entity_anagraphical}}
        </div>
        <div class="entity-main-thumb-titled">
          {{#entity_thumbnail}}
            <div class="height-to-width entity-main-thumb" {{#src}}style="background-image:url('{{.}}')"{{/src}}"></div>
          {{/entity_thumbnail}}
          {{#entity_external_link}}
            {{#href}}<a href="{{.}}">{{/href}}
              {{#text}}<span class="entity-external-link">{{.}}</span>{{/text}}
            {{#href}}</a>{{/href}}
          {{/entity_external_link}}
        </div>
      </div>
      {{#entity_description}}<p>{{.}}</p>{{/entity_description}}
    </div>

    <div class="entity-main">

      <div id="js-template-entity-tab-content"><noscript>{{> molecules/components/search/search-listitem-js}}</noscript></div>
      <div class="eu-accordion-tabs cf">
        {{#tab_items}}
          {{> organisms/components/eu-accordion-tab-fed-search}}
        {{/tab_items}}
      </div>

      {{#content.andy}}
        {{#preview_search_data_present}}
          <a class="scroll-trigger"
             data-enabled="true"
             data-fire-on-open="loadPreview"
             data-disable-when-fired="loadPreview"
             id="scroll-trigger-preview">
          </a>
          <h2 class="section-header js-sneak-peek-header">{{{preview_search_title}}} </h2>
        {{/preview_search_data_present}}

        {{#preview_items}}
          <ol class="result-items display-grid cf not-loaded">
            <li class="grid-sizer"></li>
            {{#items }}
              <li>
                {{> molecules/components/search/search-listitem }}
              </li>
            {{/items }}
          </ol>
          <div class="show-more-mlt"><a href="{{more_items_query}}">{{ i18n.global.more.show-more }}â€¦ ({{more_items_total_formatted}})</a></div>
        {{/preview_items }}

      {{/content.andy}}
      <div id="molecules-components-search-search-listitem-js"><noscript>{{> molecules/components/search/search-listitem-js }}</noscript></div>
    </div>

  </div>

  {{#content}}
    <div class="lc cf">
      {{>organisms/sections/social-share}}
    </div>
  {{/content}}
</section>

<section class="lc relative">
  <h2 class="section-header related-header">{{i18n.site.entity.labels.similar}}</h2>

  {{#content.carousel}}
    <div class="cf lc entity-related-container mlt">
      <a id="scroll-trigger-carousel"
         class="scroll-trigger"
         data-enabled="true"
         data-fire-on-open="showCarousel"
         data-fire-on-open-params='{ "loadUrl": "{{more_items_load}}", "total_available": "{{more_items_total}}", "template": "aggregated", "arrowClass": "white-grey", "minSpacingPx": 130}'
      ></a>

      <div class="js-carousel entity-related">
        <ul class="cf">
          {{#items}}
            <li class="js-carousel-item">
              <div class="mlt-img-div height-to-width" style="background-image: url({{img.src}})">
                <div class="inner"><a class="link" href="{{url}}">&nbsp;</a></div>
              </div>
              {{#title}}
              <span class="js-carousel-title">
                <a href="{{url}}">{{.}}</a>
              </span>
              {{/title}}
            </li>
          {{/items}}
        </ul>
      </div>

      <a class="scroll-trigger trigger-chain"
         data-enabled="true"
         data-disable-when-fired="showCarousel"
         data-fire-on-open-params='{ "trigger": "scroll-trigger-carousel"}'></a>
    </div>
  {{/content.carousel}}
</section>

