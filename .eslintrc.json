{
	"env": {
		"browser": true,
		"jquery": true,
		"jasmine": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"define": false,
		"module": false,
		"pageName": false,
		"require": false,
		"requirejs": false,
		"ugcEnabledCollections": false,
		"window": false
	},
	"rules": {
		"no-console": 0,
		"indent": [2, 2],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
